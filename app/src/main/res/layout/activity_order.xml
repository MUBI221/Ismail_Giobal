<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Order">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/image">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/back_ios_24" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ismail_global_logo" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:src="@drawable/notifications" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="-300dp"
        android:background="@drawable/button"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/round_person_24" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mubashir"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-30dp"
            android:src="@drawable/currency_exchange_24" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:text="Current Balance 24,000 PKR"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="100sp"
            android:layout_weight="1"
            android:layout_height="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-40dp"
            android:text="Total Cartoons"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100sp"

            android:layout_weight="1"
            android:layout_height="20sp"
            android:layout_marginLeft="-180dp"
            android:layout_marginTop="-20dp"
            android:text="Total Cartoons"
            android:textAlignment="center"
            android:textStyle="bold"/>

<TextView
            android:layout_width="80sp"
            android:layout_weight="1"
            android:layout_height="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-40dp"
            android:text="0"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="-60dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="-60dp"
            android:text="Lorem Ipsum is simply Text"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="-60dp"
            android:padding="5dp"
            android:src="@drawable/cancel" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="130sp"
        android:scaleType="fitEnd"
        android:src="@drawable/image" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="-100dp"
        android:background="@drawable/oval"
        android:src="@drawable/watch_later_24" />
</LinearLayout>